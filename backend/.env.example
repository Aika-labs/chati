# ===========================================
# CHATI - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Server
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres
SUPABASE_URL=https://[PROJECT].supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# WhatsApp Business API
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
# Note: WhatsApp access tokens are stored per-tenant in the database

# AI - Groq
GROQ_API_KEY=gsk_your_groq_api_key

# Google APIs (Calendar, Sheets)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Rate Limiting
RATE_LIMIT_DAILY_MESSAGES=250
RATE_LIMIT_INBOUND_PER_MIN=100

# File Upload
MAX_FILE_SIZE_MB=10

# ===========================================
# Production Only (docker-compose.yml)
# ===========================================

# Domain for Traefik
DOMAIN=chati.example.com

# Let's Encrypt email
ACME_EMAIL=admin@example.com

# Traefik dashboard auth (htpasswd format)
# Generate with: htpasswd -nb admin password
TRAEFIK_AUTH=admin:$apr1$...
